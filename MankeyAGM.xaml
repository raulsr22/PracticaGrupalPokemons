<UserControl
    x:Class="ProyectoUWPenBlanco.MankeyAGM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoUWPenBlanco"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <UserControl.Resources>

        <Storyboard x:Name="AnimacionIdleMankey" RepeatBehavior="Forever" AutoReverse="True">
            <!-- Movimiento vertical suave -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].Y"
                 From="0" To="-5"
                 Duration="0:0:1" />
        </Storyboard>

        <!-- Storyboard para la animación de defensa -->
        <Storyboard x:Name="AnimacionDefensaMankey">
            <!-- Mostrar el escudo -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Escudo_Mankey"
                               Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>

            <!-- Temblor leve del cuerpo completo -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].X"
                 From="0" To="6" Duration="0:0:0.1" AutoReverse="True" RepeatBehavior="3x" />

            <!-- Encogerse ligeramente (defensivo) -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].ScaleY"
                 To="0.85" Duration="0:0:0.3" AutoReverse="True" />

            <!-- Color opcional del cuerpo (solo si quieres mantenerlo) -->
            <ColorAnimation Storyboard.TargetName="Cuerpo_Mankey"
                Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                To="DarkSlateGray" Duration="0:0:0.2" AutoReverse="True" />
        </Storyboard>

        <!-- Storyboard para la animación de herido -->
        <Storyboard x:Name="AnimacionHeridoMankey">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Contenedor_Mankey"
                               Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].X">
                <SplineDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.05" Value="-20"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.1" Value="10"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.15" Value="-6"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="4"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.25" Value="0"/>
            </DoubleAnimationUsingKeyFrames>

            <ColorAnimation Storyboard.TargetName="Cuerpo_Mankey"
                Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                To="IndianRed" Duration="0:0:0.2" AutoReverse="True" />

        </Storyboard>

        <!-- Storyboard para la animación de curación -->
        <Storyboard x:Name="AnimacionCuracionMankey">
            <!-- Brillo (aumenta Opacidad y vuelve) -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="Opacity"
                 From="1" To="0.4"
                 Duration="0:0:0.1"
                 AutoReverse="True"
                 RepeatBehavior="2x"/>
        </Storyboard>

        <!-- Storyboard para la animación de ENERGÍA -->
        <Storyboard x:Name="AnimacionEnergiaMankey">
            <!-- Brillo general -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="Opacity"
                 From="1" To="0.4"
                 Duration="0:0:0.1"
                 AutoReverse="True"
                 RepeatBehavior="2x"/>

            <!-- Color amarillo temporal en el cuerpo -->
            <ColorAnimation Storyboard.TargetName="Cuerpo_Mankey"
                Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                To="Goldenrod"
                Duration="0:0:0.2"
                AutoReverse="True"/>
        </Storyboard>

        <!-- Storyboard para la animación de KO -->
        <Storyboard x:Name="AnimacionKO_Mankey">
            <!-- Pequeño temblor antes de caer -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].Y"
                 From="0" To="20"
                 Duration="0:0:0.1"
                 AutoReverse="True"
                 RepeatBehavior="3x"/>

            <!-- Caída del cuerpo -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].Y"
                 To="100"
                 Duration="0:0:0.3" />
        </Storyboard>

        <!-- Storyboard para la animación de ataque débil -->
        <Storyboard x:Name="AnimacionAtaqueFlojoMankey">
            <!-- Impulso leve hacia adelante -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].X"
                 To="20" Duration="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].Y"
                 To="-10" Duration="0:0:0.15" AutoReverse="True"/>

            <!-- Latigazo leve de la cola -->
            <DoubleAnimation Storyboard.TargetName="ColaRotate"
                 Storyboard.TargetProperty="Angle"
                 From="0" To="45"
                 Duration="0:0:0.2"
                 AutoReverse="True"/>
        </Storyboard>

        <!-- Storyboard para la animación de ataque fuerte -->
        <Storyboard x:Name="AnimacionAtaqueFuerteMankey">
            <!-- Impulso -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].X"
                 To="50" Duration="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].Y"
                 To="-30" Duration="0:0:0.15" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].Angle"
                 To="20" Duration="0:0:0.15" AutoReverse="True"/>

            <!-- Brillo cuerpo -->
            <DoubleAnimation Storyboard.TargetName="Cuerpo_Mankey"
                 Storyboard.TargetProperty="Opacity"
                 From="1" To="0.4"
                 Duration="0:0:0.1"
                 AutoReverse="True"
                 RepeatBehavior="2x"/>

            <!-- Latigazo doble -->
            <DoubleAnimation Storyboard.TargetName="ColaRotate"
                 Storyboard.TargetProperty="Angle"
                 From="0" To="100"
                 Duration="0:0:0.2"
                 AutoReverse="True"
                 RepeatBehavior="2x"/>
        </Storyboard>


        <!-- Storyboard para la animación de descansar -->
        <Storyboard x:Name="AnimacionDescansarMankey">
            <!-- Movimiento leve del cuerpo hacia abajo -->
            <DoubleAnimation Storyboard.TargetName="Contenedor_Mankey"
                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].Y"
                 To="25" Duration="0:0:0.3" AutoReverse="True" RepeatBehavior="2x"/>

            <!-- Oscurecer el color del cuerpo (simulando agotamiento) -->
            <ColorAnimation Storyboard.TargetName="Cuerpo_Mankey"
                Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                To="LightGray" Duration="0:0:0.3" AutoReverse="True" RepeatBehavior="2x"/>

            <!-- Zzz sube un poco -->
            <DoubleAnimation Storyboard.TargetName="IconoZzz"
                 Storyboard.TargetProperty="(Canvas.Top)"
                 From="120" To="105"
                 Duration="0:0:0.4" AutoReverse="True" RepeatBehavior="2x"/>

            <!-- Zzz parpadea -->
            <DoubleAnimation Storyboard.TargetName="IconoZzz"
                 Storyboard.TargetProperty="Opacity"
                 From="0.9" To="0.2"
                 Duration="0:0:0.4" AutoReverse="True" RepeatBehavior="2x"/>
        </Storyboard>

    </UserControl.Resources>

    <!-- Grid layout con 3 columnas y 4 filas -->
    <Grid x:Name="MainGrid">


        <!-- Definición de columnas -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="257*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>

        <!-- Definición de filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>


        <!-- Imagen de fondo con la imagen del Pokémon, cubriendo toda la página -->
        <Image x:Name="Fondo_mankey" 
            Grid.Column="0" 
            Grid.Row="0" 
            Grid.RowSpan="4" 
            Grid.ColumnSpan="4" 
            Source="ms-appx:///AssetsMankeyAGM/Fondo_mankey.jpg" 
            Stretch="UniformToFill" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"/>

        <!-- Imagen del corazón para bajar la vida -->
        <Image x:Name="iconoCorazon"
           Source="/AssetsMankeyAGM/corazon.png"
           Width="70" Height="70"
           Grid.Row="0" Grid.Column="0"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
            Visibility="Collapsed"/>

        <!-- Barra de progreso superior  -->
        <ProgressBar x:Name="ProgressBarVida"
             Grid.Row="0" Grid.Column="1"
             Margin="5,5,5,5"
             VerticalAlignment="Stretch"
             Background="#4CE60A0A"
             Foreground="#FFE60A0A"
             Value="100" Visibility="Collapsed"/>

        <!-- Pócima roja (aumenta vida) -->
        <Image x:Name="pocimaVida"
           Source="/AssetsMankeyAGM/red-potion.png"
           Width="70" Height="70"
           Grid.Row="0" Grid.Column="2"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"
            Visibility="Collapsed"/>

        <!-- Rayo (resta energía) -->
        <Image x:Name="iconoEnergia"
           Source="/AssetsMankeyAGM/energia.png"
           Width="70" Height="70"
           Grid.Row="1" Grid.Column="0"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           Visibility="Collapsed"/>

        <!-- Barra de progreso inferior, puede estar oculta al principio (d:IsHidden="True") -->
        <ProgressBar x:Name="ProgressBarEner" Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" VerticalAlignment="Stretch" Background="#4CFFF000" Foreground="#FFFFF900" Value="100" d:IsHidden="False" Visibility="Collapsed"/>

        <!-- Pócima amarilla (aumenta energía) -->
        <Image x:Name="pocimaEnergia"
           Source="/AssetsMankeyAGM/yellow-potion.png"
           Width="70" Height="70"
           Grid.Row="1" Grid.Column="2"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"
            Visibility="Collapsed"/>



