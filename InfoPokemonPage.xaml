<Page 
    x:Class="ProyectoUWPenBlanco.InfoPokemonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoUWPenBlanco"
    Background="#FFF9F9F9">

    <Grid Padding="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Botón Volver -->
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Width="45"
                Height="45"
                Background="White"
                BorderBrush="DarkSlateBlue"
                BorderThickness="2"
                CornerRadius="10"
                Click="BtnVolver_Click">
            <FontIcon Glyph="&#xE72B;" FontFamily="Segoe MDL2 Assets"
                      Foreground="DarkSlateBlue"
                      FontSize="20"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
        </Button>

        <!-- Título -->
        <TextBlock Text="Detalles del Pokémon"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="DarkSlateBlue"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Ficha con sombra y fondo decorativo -->
        <Border x:Name="borderFicha"
                Grid.Row="1"
                Width="450"
                Background="White"
                BorderBrush="DarkSlateBlue"
                BorderThickness="2"
                CornerRadius="20"
                Padding="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Grid>

                <!-- Contenido -->
                <StackPanel Spacing="15" HorizontalAlignment="Center">
                    <!-- Imagen del Pokémon -->
                    <Image x:Name="imgPokemon"
                           Height="200"
                           Width="200"
                           Stretch="Uniform"
                           Margin="0,0,0,10"/>

                    <!-- Nombre -->
                    <TextBlock x:Name="txtNombre"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#2E2E2E"
                               TextAlignment="Center"/>

                    <!-- Tipo -->
                    <TextBlock x:Name="txtTipo"
                               FontSize="18"
                               FontStyle="Italic"
                               Foreground="#5A5A5A"
                               TextAlignment="Center"/>

                    <!-- Descripción -->
                    <TextBlock x:Name="txtDesc"
                               FontSize="17"
                               TextWrapping="WrapWholeWords"
                               Foreground="#444"
                               TextAlignment="Center"
                               Margin="10,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
