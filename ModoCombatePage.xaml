<Page
    x:Class="ProyectoUWPenBlanco.ModoCombatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoUWPenBlanco">

    <Grid>
        <!-- Fondo temático con imagen -->
        <Grid.Background>
            <ImageBrush ImageSource="AssetsGrupal/Fondo_Modo.jpg"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"
                        Opacity="0.4"/>
        </Grid.Background>

        <!-- Contenido encima del fondo -->
        <Grid Padding="30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">
                <TextBlock Text="¿Cómo quieres combatir?" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <Button Content="🧑‍🤝‍🧑  Combate 1 vs 1"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Width="450"
                        Height="70"
                        CornerRadius="10"
                        Click="Combate1vs1_Click"/>

                <Button Content="🤖  Combate contra la máquina"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Width="450"
                        Height="70"
                        CornerRadius="10"
                        Click="CombateIA_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
